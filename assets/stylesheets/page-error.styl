.page-error
	background-color $backgroundColor
	color $textColorReversed

	h1
		font-size 2.4rem
		font-weight bold
		margin-bottom 16px

		&::after
			margin 6px auto 0
			content ""
			width 48px
			height 3px
			border 1px solid $backgroundColorReversed
			border-radius 8px
			display block
			clear both
			background-color $backgroundColorReversed

	&--inner
		padding 32px
		text-align center
		max-width 400px
		margin 0 auto
		background-color $backgroundColor