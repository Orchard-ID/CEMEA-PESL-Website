	color: #fff;
}
:-moz-placeholder {
	color: #fff;
	opacity: 1;
}
::-moz-placeholder {
	color: #fff;
	opacity: 1;
}
::-ms-input-placeholder {
	color: #fff;
}

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video
	-webkit-overflow-scrolling auto
	-ms-overflow-style -ms-autohiding-scrollbar
	box-sizing inherit
	margin 0
	padding 0
	border 0
	font-size 100%
	font inherit
	vertical-align baseline
	&:before
	&:after
		box-sizing inherit

em
	font-style italic

strong
	font-weight bold

html
body
	-webkit-font-smoothing antialiased
	background-color $backgroundColor
	color $textColor
	height 100%
	width 100%
	scroll-behavior smooth

html
	font-size 62.5%
	box-sizing border-box

body
	-webkit-tap-highlight-color rgba(0,0,0,0)
	line-height 1.4
	font-size 1.4rem
	font-weight lighter
	font-family 'Quicksand', 'Open Sans', 'Arial'
	letter-spacing .04rem

ol, ul
	list-style none

blockquote, q
	quotes none

blockquotebefore, blockquoteafter,
qbefore, qafter
	content ''
	content none

table
	border-collapse collapse
	border-spacing 0

p
	font-size 1.4rem

h1 + p
h2 + p
h3 + p
p + p
	margin-top 16px

hr.separator
	border 0
	height 1px
	background-image: linear-gradient(to right, #1592E6 33%, #fff 0%);
	background-position: bottom;
	background-size: 8px 1px;
	background-repeat: repeat-x;

.a
a
	cursor pointer
	color $linkColor
	text-decoration none
	transition color .3s ease, border .3s ease

	&:hover
		color $highlightLinkColor

.text-justify
	text-align justify

.arrow
	max-width 3.2rem
	vertical-align middle
	margin 0 0.8rem

.layout
	position absolute
	top 0
	left 0
	height 100%
	width 100%

.main-content
	margin-top 95px
	background-color $backgroundColorReversed

.upper-content
	z-index 2
	color $highlightTextColor
	background-color $backgroundColorReversed
	position absolute
	top 0
	width 100%

	&--inner
		position relative
		margin 0 auto
		max-width 1200px
		&::after
			content ""
			display block
			clear both

.lower-content
	background-color $backgroundColor

.errors
	color #d9534f
	font-size .6em

button
	transition opacity .5s ease
	font-family inherit
	font-size inherit
	color $highlightTextColor
	border 1px solid $borderColor
	border-radius 40px
	padding 6px 12px
	opacity .8
	background-color $backgroundColorReversed
	cursor pointer
	font-weight bold
	transition color .2s ease, border .2s ease
	&:hover
		opacity 1
		color $highlightLinkColor
		border-color $highlightLinkColor
	&.invalid
		opacity .2
		cursor not-allowed
	&:focus
		outline -webkit-focus-ring-color auto 0

.field
	position relative
	label
		box-sizing border-box
		transition top .5s ease, opacity .5s ease
		opacity 1
		position absolute
		font-family inherit
		top 0
		font-size 1.2rem
		&.label-textarea
			top -2px
			padding-left 8px

	textarea
	input
		box-sizing border-box
		transition color 1s ease, border-color 1s ease, padding .5s ease
		border 0
		border-bottom 1px solid #95989A
		font-family inherit
		font-size inherit
		padding 1.4rem 0 0.2rem
		margin-bottom 2.4rem
		display block
		width 100%
		&:focus
			outline -webkit-focus-ring-color auto 0
			color #00a00c
			border-color #00a00c

	textarea
		padding 12px 8px
		border-left 1px solid #95989A
		min-height 200px

	button
		margin-top 1.8rem

	&.empty
		label
			top 10px
			opacity 0
		input
			padding .8rem 0
	.errors
		position absolute
		top calc(100% + 2px)
		right 0

.invalid
	input
		&:focus
			outline -webkit-focus-ring-color auto 0
			color #d9534f
			border-color #d9534f