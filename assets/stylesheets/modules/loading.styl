.loading
	transition opacity .5s ease, bottom 2s ease-out
	pointer-events none
	position fixed;
	bottom 0
	left 50%
	width 100%
	transform translateX(-50%)
	background #fff
	background linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(255,255,255,0.8) 33%,rgba(255,255,255,1) 66%,rgba(255,255,255,1) 100%)
	opacity 1
	padding 100px 0
	font-size 3rem
	z-index 10
	text-align center

	.as-loaded-page ^[0]
		opacity 0
		bottom -200px